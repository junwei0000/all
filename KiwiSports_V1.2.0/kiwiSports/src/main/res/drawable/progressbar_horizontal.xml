<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background" >	 
		<shape>
			<corners android:radius="5dip" />
			<gradient android:angle="270" android:centerColor="@color/gray_bg"
				android:centerY="0.75" android:endColor="@color/gray_bg"
				android:startColor="@color/gray_bg" />
		</shape>
	</item>


	<item android:id="@android:id/progress">   
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:angle="270" android:centerColor="@color/ching"
					android:centerY="0.75" android:endColor="@color/ching"
					android:startColor="@color/ching" />
			</shape>
		</clip>
	</item>

</layer-list>