<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_page_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/item_iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/property_avspeed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listitem_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_pagetop_size" />

        <TextView
            android:id="@+id/listitem_tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="km"
            android:textColor="@color/white"
            android:textSize="@dimen/text_zhu_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/listitem_tv_cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padd_imgtextleftright"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="平均速度"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_zhu_size" />
</LinearLayout>