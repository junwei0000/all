<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/jianju"
        android:background="@color/gray_bg" />

    <RelativeLayout
        style="@style/padd_lefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <RelativeLayout
            android:id="@+id/listitem_relat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/listitem_iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/venues_tianjia_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/listitem_iv_arrow"
                android:layout_toRightOf="@+id/listitem_iv_add"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1"
                android:paddingLeft="5dp"
                android:text="@string/add"
                android:singleLine="true"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <ImageView
                android:id="@+id/listitem_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/usercenter_arrow_img" />
        </RelativeLayout>
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padd_leftright" >

     <include layout="@layout/line" />
</LinearLayout>
   

</LinearLayout>