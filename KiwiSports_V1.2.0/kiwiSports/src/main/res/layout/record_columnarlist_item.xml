<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_notselector"
    android:paddingBottom="3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listitem_tv_distance"
        android:layout_width="55dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:background="#69DA98"
        android:gravity="center"
        android:text="1km"
        android:textColor="@color/white"
        android:textSize="@dimen/text_zhu_size" />

    <TextView
        android:id="@+id/listitem_tv_bili"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/ching" />

    <TextView
        android:id="@+id/listitem_tv_matchspeed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/padd_imgtextleftright"
        android:text="1km"
        android:textColor="@color/text_contents_color"
        android:textSize="@dimen/text_zhu_size" />
</LinearLayout>