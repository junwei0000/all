<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="150dp"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/myexit_text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/padd_lefgtright"
            android:text="@string/myexit_text_title"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_pagetop_size" />

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/myexit_text_off"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/corners_bg_gray"
                android:gravity="center"
                android:text="@string/myexit_text_off"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_pagetop_size" />

            <TextView
                android:id="@+id/myexit_text_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:clickable="true"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/corners_bg_qing"
                android:gravity="center"
                android:text="@string/myexit_text_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/text_pagetop_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>