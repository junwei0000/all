<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rankitemtop_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp" >

            <com.KiwiSports.utils.CircleImageView
                android:id="@+id/rankitemtop_iv_head2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/contentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/rankitemtop_tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_biaoti_size" />

        <TextView
            android:id="@+id/rankitemtop_tv_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_biaoti_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rankitemtop_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp" >

            <com.KiwiSports.utils.CircleImageView
                android:id="@+id/rankitemtop_iv_head1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/contentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/rankitemtop_tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_biaoti_size" />

        <TextView
            android:id="@+id/rankitemtop_tv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_biaoti_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rankitemtop_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp" >

            <com.KiwiSports.utils.CircleImageView
                android:id="@+id/rankitemtop_iv_head3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/contentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/rankitemtop_tv_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_biaoti_size" />

        <TextView
            android:id="@+id/rankitemtop_tv_num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_biaoti_size" />
    </LinearLayout>

</LinearLayout>