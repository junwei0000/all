<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/padd_lefgtright"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_notselector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <!---->
    <LinearLayout
        style="@style/padd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitem_iv_thumb"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/user_default_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/padd_imgtextleftright"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listitem_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:singleLine="true"
                android:text="匿名用户"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/corners_circular_red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listitem_layout_status"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/corners_bg_qing"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_localicon" />

            <TextView
                android:id="@+id/listitem_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padd_imgtextleftright"
                android:singleLine="true"
                android:text="显示"
                android:textColor="@color/white"
                android:textSize="@dimen/text_contents_size" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>