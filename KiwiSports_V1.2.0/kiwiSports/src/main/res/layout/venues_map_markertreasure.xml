<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/treasure_tv_contzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:text="ss"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_size"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/map_treasure_arrowred2_img"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/corners_circular_white"
                android:gravity="center"
                android:orientation="vertical" >

                <com.KiwiSports.utils.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/contentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/treasure_tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="q"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_min_size" />

                <TextView
                    android:id="@+id/treasure_tv_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ss"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_min_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
