<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_notdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:minHeight="210dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="40dp"
    android:visibility="gone">


    <ImageView
        android:id="@+id/not_date_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_nodata_icon"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/not_date_cont_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center_horizontal"
        android:text="网络加载失败"
        android:textColor="@color/text_contents_color"
        android:textSize="@dimen/text_biaoTi_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/not_date_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/jianJu"
        android:paddingBottom="@dimen/padd_leftright"
        android:text="暂无数据"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_content_size" />


    <TextView
        android:id="@+id/not_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/corners_bg_login"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingTop="@dimen/dp8"
        android:paddingRight="40dp"
        android:paddingBottom="@dimen/dp8"
        android:text="刷新"
        android:textColor="@color/white"
        android:textSize="@dimen/text_biaoTi_size"
        android:visibility="gone" />
</LinearLayout>