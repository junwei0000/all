<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp15">

    <LinearLayout
        style="@style/view_padd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:drawableTop="@mipmap/live_baocun"
            android:drawablePadding="@dimen/padd_imgtextleftright"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/text_healthcontents_color"
            android:textSize="@dimen/text_contents_size" />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:drawableTop="@mipmap/live_shanchu"
            android:drawablePadding="@dimen/padd_imgtextleftright"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_healthcontents_color"
            android:textSize="@dimen/text_contents_size" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:drawableTop="@mipmap/live_erweima"
            android:drawablePadding="@dimen/padd_imgtextleftright"
            android:gravity="center"
            android:text="分享二维码"
            android:textColor="@color/text_healthcontents_color"
            android:textSize="@dimen/text_contents_size" />

    </LinearLayout>

    <include layout="@layout/line" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/view_paddtopbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_healthcontents_color"
        android:textSize="@dimen/text_biaoTi_size" />


</LinearLayout>