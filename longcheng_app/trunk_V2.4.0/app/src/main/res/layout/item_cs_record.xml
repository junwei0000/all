<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg_graybian_yin"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/user_default_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_contents_size">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_jieqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_corner13"
                        android:paddingLeft="@dimen/dp3"
                        android:paddingTop="@dimen/dp1"
                        android:paddingRight="@dimen/dp3"
                        android:paddingBottom="@dimen/dp1"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_dp12_size">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_zhu_size">

                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="@dimen/text_biaoTi_size">

            </TextView>
        </RelativeLayout>


        <LinearLayout
            style="@style/view_paddlefgtright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/line" />
        </LinearLayout>

        <RelativeLayout
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名："
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户行："
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_card_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户支行："
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_card_bank_zhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡   号："
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_card_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6226 55888 4471 8888"
                        android:textColor="@color/text_contents_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_content_size">

                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_have_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="已打款"
                android:textColor="@color/red"
                android:visibility="gone">

            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_no_money"
            style="@style/view_paddlefgtright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padd_topbottom">


            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padd_leftright"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_redbian"
                android:gravity="center"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:text="复制信息"
                android:textColor="@color/red"
                android:textSize="@dimen/text_contents_size" />


            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_red"
                android:gravity="center"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:text="确认打款"
                android:textColor="@color/white"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>