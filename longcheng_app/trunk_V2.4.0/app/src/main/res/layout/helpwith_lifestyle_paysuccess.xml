<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp35"
            android:src="@mipmap/applytowisheach_popupwindow" />

        <TextView
            android:id="@+id/tv_sname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp35"
            android:gravity="center"
            android:text="感恩您的祝福"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size" />

        <TextView
            android:id="@+id/tv_rname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/jianJu"
            android:gravity="center"
            android:text="感恩您的祝福"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size" />

        <TextView
            android:id="@+id/btn_look"
            style="@style/btn"
            android:layout_marginLeft="@dimen/padd_leftright"
            android:layout_marginRight="@dimen/padd_leftright"
            android:text="继续帮祝TA" />

        <TextView
            android:id="@+id/btn_backmall"
            style="@style/view_paddtopbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padd_leftright"
            android:layout_marginRight="@dimen/padd_leftright"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/corners_bg_redbian"
            android:gravity="center"
            android:text="返回上一页"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_contents_size" />


    </LinearLayout>
</LinearLayout>
