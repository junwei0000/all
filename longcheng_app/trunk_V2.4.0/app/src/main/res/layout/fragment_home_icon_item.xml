<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_iv_img"
        android:layout_width="@dimen/engrylistItem_iconHeight"
        android:layout_height="@dimen/engrylistItem_iconHeight" />

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padd_imgtextleftright"
        android:text="每日签到"
        android:singleLine="true"
        android:textColor="@color/text_contents_color"
        android:textSize="@dimen/text_dp12_size" />
</LinearLayout>
