<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/corners_oval_red"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!---->
        <TextView
            android:id="@+id/item_yangli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="-2dp"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="@dimen/text_biaoTi_size" />

        <TextView
            android:id="@+id/item_yinli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:text="11"
            android:textColor="@color/white_tran"
            android:textSize="@dimen/text_dp12_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_icon_dui"
        android:scaleType="centerCrop" />
</LinearLayout>
