<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp7"
        android:paddingTop="@dimen/padd_topbottom">

        <ImageView
            android:id="@+id/item_iv_thumb"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padd_imgtextleftright">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/item_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padd_imgtextleftright"
                    android:text="祝福了45生命能量"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_dp12_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_deseribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padd_imgtextleftright"
                android:text="祝福你，希望你早日康复！"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_zhu_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="刚刚"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_dp12_size" />

                <LinearLayout
                    android:id="@+id/item_iv_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp8"
                    android:paddingTop="@dimen/dp8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/wisheachdetails_leaveamessage"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/item_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:background="@mipmap/message_img_arrow"
                android:scaleType="centerCrop" />
            <!---->
            <LinearLayout
                android:id="@+id/item_layout_huifu"
                style="@style/view_paddlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/corners_bg_goodgray"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padd_imgtextleftright"
                android:paddingTop="@dimen/padd_imgtextleftright" />
            <!---->
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line" />
</LinearLayout>
