<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/padd_leftright"
    android:paddingBottom="@dimen/dp10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f4f3f2">

        <ImageView
            android:id="@+id/item_iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp88"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padd_leftright"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_iv_thelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padd_imgtextleftright"
            android:background="@mipmap/mall_icon_thelabel"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_contents_size"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_num"
        style="@style/jieqi_padd"
        android:layout_marginTop="@dimen/dp4"
        android:background="@drawable/corners_bg_yellowtran15"
        android:text="已兑换0件"
        android:textColor="@color/yellow_c18f46"
        android:textSize="9dp" />

    <TextView
        android:id="@+id/item_tv_skb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:singleLine="true"
        android:textColor="@color/yellow_c18f46"
        android:textSize="@dimen/text_dp12_size" />

</LinearLayout>
