<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/write_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="2dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp88"
        android:scaleType="fitXY"
        android:src="@mipmap/moren_new"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="0dp"
        app:riv_corner_radius_top_left="5dp"
        app:riv_corner_radius_top_right="5dp"
        app:riv_mutate_background="true"
        app:riv_oval="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingLeft="@dimen/dp10">

        <TextView
            android:id="@+id/item_tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp6"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_contents_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp4"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_dp12_size" />

        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp4"
            android:textColor="@color/yellow_E95D1B"
            android:textSize="@dimen/text_dp12_size" />
    </LinearLayout>
</LinearLayout>
