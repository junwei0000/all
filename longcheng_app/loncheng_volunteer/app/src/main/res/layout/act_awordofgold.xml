<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <!---->
    <include layout="@layout/page_top" />

    <include layout="@layout/line" />
    <include layout="@layout/not_date" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/my_daughter"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/dp8"
            android:background="@mipmap/my_daughter1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp100"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="40dp">

            <com.longcheng.volunteer.utils.myview.MyScrollView
                android:id="@+id/home_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/text_yzqj_hello"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_biaoTi_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/text_yeqj_tips"
                        android:textColor="@color/color_464646"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <TextView
                        android:id="@+id/tvcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32sp"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="8dp"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_biaoTi_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userinfo_tv_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/text_yzqj_birthinfo"
                        android:textColor="@color/color_464646"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/text_yzqj_bottom"
                        android:textColor="@color/color_464646"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:letterSpacing="0.1"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/text_yzqj_signature"
                            android:textColor="@color/color_464646"
                            android:textSize="@dimen/text_biaoTi_size" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padd_imgtextleftright"
                            android:letterSpacing="0.1"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/text_yzqj_signature"
                            android:textColor="@color/color_464646"
                            android:textSize="@dimen/text_biaoTi_size" />
                    </LinearLayout>
                </LinearLayout>
            </com.longcheng.volunteer.utils.myview.MyScrollView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
