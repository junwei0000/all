<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/thanks_bg"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/view_paddtopbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padd_leftright">

        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="@dimen/dp35"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_contents_size" />

        <ImageView
            android:id="@+id/item_iv_thumb"
            android:layout_width="@dimen/dp43"
            android:layout_height="@dimen/dp43"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_leftright"
            android:layout_toRightOf="@+id/item_tv_num"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_you"
            android:layout_toRightOf="@+id/item_iv_thumb"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:textColor="@color/white"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/item_tv_shequ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="养神方立春公社"
                android:textColor="@color/white"
                android:textSize="@dimen/text_min_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_tv_engerynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padd_imgtextleftright"
                android:text="14654"
                android:textColor="@color/white"
                android:textSize="@dimen/text_contents_size" />

            <ImageView
                android:id="@+id/item_iv_engerynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/theorder_gratitude_icon1" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/line" />
</LinearLayout>
