<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp55">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padd_leftright"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奉献是疗愈最好的方式 "
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <TextView
                        android:id="@+id/detailhelp_tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padd_leftright"
                        android:text="（祝福金额：24元）"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_cancel"
                    style="@style/view_paddlefgtright"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/dialog_city_cancel" />
                </LinearLayout>
            </RelativeLayout>

            <com.longcheng.lifecareplan.utils.myview.MyGridView
                android:id="@+id/detailhelp_gv_money"
                style="@style/view_marginlefgtright"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:focusable="false"
                android:gravity="left"
                android:horizontalSpacing="10dp"
                android:listSelector="@drawable/list_notselector"
                android:numColumns="3"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp2"
                android:layout_marginTop="@dimen/dp15"
                android:background="@color/red_fen"
                android:gravity="center"
                android:text="奉 献 越 多 有 利 于 导 入 更 多 的 生 命 能 量"
                android:textColor="@color/red"
                android:textSize="@dimen/text_zhu_size" />

            <TextView
                style="@style/view_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="奉献生命能量"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/text_biaoTi_size" />
            <!---->
            <LinearLayout
                style="@style/view_paddlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/detailhelp_relat_superengry"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp43"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_black"
                    android:padding="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/detailhelp_tv_superengrytitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="超级生命能量: "
                            android:textColor="@color/text_contents_color"
                            android:textSize="@dimen/text_dp12_size" />

                        <TextView
                            android:id="@+id/detailhelp_tv_superengry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_contents_color"
                            android:textSize="@dimen/text_zhu_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/detailhelp_iv_superengryselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@mipmap/pay_selcet_icon_red"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailhelp_relat_account"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp43"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/corners_bg_black"
                    android:padding="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detailhelp_tv_accounttitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现金余额"
                            android:textColor="@color/text_contents_color"
                            android:textSize="@dimen/text_dp12_size" />

                        <TextView
                            android:id="@+id/detailhelp_tv_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_contents_color"
                            android:textSize="@dimen/text_zhu_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/detailhelp_iv_accountselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@mipmap/pay_selcet_icon_red"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_helpsure"
                    style="@style/btn"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:text="送上祝福" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>