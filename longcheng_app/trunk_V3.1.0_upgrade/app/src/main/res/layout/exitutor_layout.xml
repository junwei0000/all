<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        style="@style/view_padd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_cont"
           android:padding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_graybian"
            android:hint="请输入创业导师手机号"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/text_noclick_color"
            android:textSize="@dimen/text_biaoTi_size" />

        <TextView
            android:id="@+id/tv_sure"
            style="@style/btn_padd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padd_leftright"
            android:background="@drawable/pioneer_red_gradient_shape"
            android:gravity="center"
            android:singleLine="true"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/text_content_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/realt_info"
        style="@style/view_marginpadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg_graybian_yin"
        android:visibility="gone">

        <LinearLayout
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_img"
                android:layout_width="@dimen/dp55"
                android:layout_height="@dimen/dp55"
                android:layout_marginRight="@dimen/padd_leftright"
                android:background="@mipmap/user_default_icon"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="姓名"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_contents_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_tv_jieqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:background="@drawable/corners_bg_redfen"
                        android:paddingLeft="@dimen/dp3"
                        android:paddingTop="@dimen/dp1"
                        android:paddingRight="@dimen/dp3"
                        android:paddingBottom="@dimen/dp1"
                        android:singleLine="true"
                        android:text="庚子.立春"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_dp12_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp6"
                        android:paddingBottom="@dimen/dp6"
                        android:singleLine="true"
                        android:text="18310029028"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_content_size" />

                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:background="@mipmap/my_dianhua2" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp20"
            android:background="@drawable/corners_bg_fqjieqi"
            android:paddingLeft="@dimen/dp6"
            android:paddingTop="@dimen/dp2"
            android:paddingRight="@dimen/dp6"
            android:paddingBottom="@dimen/dp2"
            android:text="已选"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dp12_size" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_commit"
            style="@style/view_paddtopbottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/gray"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_biaoTi_size" />
    </LinearLayout>
</LinearLayout>
