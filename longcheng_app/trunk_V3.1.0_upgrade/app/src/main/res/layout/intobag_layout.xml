<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/page_top" />

    <include layout="@layout/line" />


    <ScrollView
        android:id="@+id/sv_myredbag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_good_use"
                style="@style/view_panding_fubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="送福包给好友"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_biaoTi_size"
                android:textStyle="bold" />

            <com.longcheng.lifecareplan.utils.myview.MyListView
                android:id="@+id/lv_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/page_bg"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:focusable="false"
                android:scrollbars="none"
                android:visibility="visible" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/color_FAFAFA"
                />
            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/all_chaonen"
                    style="@style/view_panding_fubao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="@string/duanxin_moban"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_biaoTi_size"/>


                <TextView
                    android:id="@+id/btn_goaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_marginBottom="@dimen/dp50"
                    android:background="@mipmap/signed"
                    android:gravity="center"
                    android:maxEms="12"
                    android:minEms="12"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingTop="@dimen/dp8"
                    android:paddingRight="@dimen/dp12"
                    android:paddingBottom="@dimen/dp8"
                    android:text="@string/song_fubao_quickly"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>