<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_corner4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="聚宝盆"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_pageTop_size"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_hinit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:lineSpacingMultiplier="1.3"
            android:padding="@dimen/dp20"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/hinit_diloag_not_first"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_contents_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg_login_new"
                android:gravity="center"
                android:paddingLeft="@dimen/dp50"
                android:paddingTop="@dimen/dp10"
                android:paddingRight="@dimen/dp50"
                android:paddingBottom="@dimen/dp10"
                android:text="开启"
                android:textColor="@color/white"
                android:textSize="@dimen/text_content_size">

            </TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>