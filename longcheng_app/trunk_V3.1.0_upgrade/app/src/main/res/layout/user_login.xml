<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/user_basepage" />

    <LinearLayout
        style="@style/view_marginlefgtright"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_content_bg"
            android:orientation="vertical"
            android:padding="@dimen/dp35">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/login_phone_icon" />

                <View
                    style="@style/view_marginlefgtright"
                    android:layout_width="0.6dp"
                    android:layout_height="13dp"
                    android:background="@color/linesubg" />

                <TextView
                    android:id="@+id/phonetype_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_contents_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padd_imgtextleftright"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@mipmap/xiala" />

                <EditText
                    android:id="@+id/phonetype_et_phone"
                    style="@style/view_paddtopbottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/account_hint"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/login_hint_color"
                    android:textSize="@dimen/text_contents_size" />
            </LinearLayout>


            <include layout="@layout/line_new" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/login_pw_icon" />

                <View
                    style="@style/view_marginlefgtright"
                    android:layout_width="0.6dp"
                    android:layout_height="13dp"
                    android:background="@color/linesubg" />

                <EditText
                    android:id="@+id/phonetype_et_pw"
                    style="@style/view_paddtopbottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/pw_hint"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/login_hint_color"
                    android:textSize="@dimen/text_contents_size" />

                <LinearLayout
                    android:id="@+id/phonetype_layout_pwsee"
                    style="@style/view_paddtopbottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padd_leftright">


                    <ImageView
                        android:id="@+id/phonetype_iv_pwsee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/userlogin_closepw_icon" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/line_new" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15">

                <TextView
                    android:id="@+id/login_btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="立即注册"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/login_btn_forgetpw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="忘记密码"
                    android:textColor="@color/color_cccccc"
                    android:textSize="@dimen/text_contents_size" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal">

                <TextView
                    android:id="@+id/btn_login"
                    style="@style/login_new"
                    android:background="@drawable/corners_bg_logingray_new"
                    android:text="@string/login_text" />
            </LinearLayout>

        </LinearLayout>
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp20"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp35"
            android:paddingRight="@dimen/dp35">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/loginthird_title"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/loginthird_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="微信一键登录"
                    android:textColor="@color/c9"
                    android:textSize="@dimen/text_contents_size" />


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/loginthird_title"
                    android:background="#cccccc" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padd_topbottom"
                android:gravity="center">

                <ImageView
                    android:id="@+id/loginthird_iv_wechat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/login_weixin" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
