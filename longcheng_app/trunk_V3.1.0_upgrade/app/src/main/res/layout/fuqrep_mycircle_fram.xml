<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padd_topbottom">

                <TextView
                    android:id="@+id/fuquan_tv_noblecircle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="贵人圈"
                    android:textColor="@color/yellow_E95D1B"
                    android:textSize="@dimen/text_biaoTi_size" />

                <TextView
                    android:id="@+id/fuquan_tv_noblecircleline"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@drawable/corners_bg_yellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padd_topbottom">

                <TextView
                    android:id="@+id/fuquan_tv_blessingcircle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="福神圈"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_biaoTi_size" />

                <TextView
                    android:id="@+id/fuquan_tv_blessingcircleline"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@drawable/corners_bg_yellow"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:fadingEdge="none"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>
</LinearLayout>
