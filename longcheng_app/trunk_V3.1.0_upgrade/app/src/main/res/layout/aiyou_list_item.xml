<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!---->

    <LinearLayout
        android:id="@+id/item_layout"
        style="@style/view_padd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_iv_img"
            android:layout_width="@dimen/dp55"
            android:layout_height="@dimen/dp55"
            android:layout_marginRight="@dimen/padd_leftright"
            android:background="@mipmap/user_default_icon"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="姓名"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    style="@style/jieqi_padd"
                    android:id="@+id/item_tv_jieqi"
                    android:text="庚子.立春"  />
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp4"
                android:paddingBottom="@dimen/dp4"
                android:singleLine="true"
                android:text="18310029028"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_zhu_size" />

            <TextView
                android:id="@+id/item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="18310029028"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="+60元"
                android:visibility="gone"
                android:textColor="@color/red"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/item_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中"
                android:visibility="gone"
                android:textColor="@color/red"
                android:textSize="@dimen/text_dp12_size" />


        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line" />

</LinearLayout>
