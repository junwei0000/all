<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_graybian_yin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_tv_grouptype"
        style="@style/text_padd_oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/corners_bg_lvbottom"
        android:text="编组订单"
        android:textColor="@color/white"
        android:textSize="@dimen/text_min_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tv_grouptype"
        android:orientation="vertical">
        <!---->
        <RelativeLayout
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_img"
                android:layout_width="@dimen/dp55"
                android:layout_height="@dimen/dp55"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/padd_leftright"
                android:background="@mipmap/user_default_icon"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_layout_right"
                android:layout_toRightOf="@+id/item_iv_img"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="姓名"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_biaoTi_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_tv_jieqi"
                        style="@style/jieqi_padd"
                        android:text="庚子.立春" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_layout_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="18310029028"
                        android:textColor="@color/text_contents_color"
                        android:textSize="@dimen/text_content_size" />

                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:background="@mipmap/my_dianhua2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_layout_shenfen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2020-03-17 12:23:12"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_zhu_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_biaoTi_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <TextView
                        android:id="@+id/item_tv_typetitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_zhu_size" />

                    <TextView
                        android:id="@+id/item_tv_typetitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_zhu_size" />
                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/pageTop_layout_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp20"
                        android:paddingTop="@dimen/dp8">

                        <ImageView
                            android:id="@+id/im_connect"
                            android:layout_width="@dimen/dp15"
                            android:layout_height="@dimen/dp15"
                            android:src="@mipmap/my_liantian_icon"
                            android:visibility="gone" />
                    </LinearLayout>

                    <include layout="@layout/tv_num" />
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_layout_payinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                style="@style/view_paddlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/line" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item_layout_payshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/item_layout_grouparrow"
                style="@style/view_paddtopbottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/item_iv_grouparrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/order_group_hide" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/view_paddlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/line" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_detail"
                style="@style/view_padd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp6"
                android:layout_weight="1"
                android:gravity="center"
                android:text="查看匹配详情"
                android:textColor="@color/red"
                android:textSize="@dimen/text_biaoTi_size"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/item_layout_zybleader"
                android:layout_width="match_parent"
                style="@style/view_paddlefgtright"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/item_iv_imgleader"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:background="@mipmap/user_default_icon"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/item_tv_nameleader"
                    style="@style/view_paddlefgtright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="姓名"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_biaoTi_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_tv_phoneleader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="18310029028"
                        android:textColor="@color/text_contents_color"
                        android:textSize="@dimen/text_content_size" />

                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:background="@mipmap/my_dianhua2" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="组队队长"
                    android:textColor="@color/red_course"
                    android:textSize="@dimen/text_zhu_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_layout_btn2"
                style="@style/view_padd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_tv_left"
                    style="@style/view_padd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_redbian"
                    android:gravity="center"
                    android:text="驳回"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_biaoTi_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/item_tv_rigth"
                        style="@style/view_padd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_bg_red"
                        android:gravity="center"
                        android:text="已打款"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_biaoTi_size" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>