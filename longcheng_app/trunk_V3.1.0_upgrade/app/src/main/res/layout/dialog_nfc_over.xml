<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp100"
        android:background="@drawable/corners_bg_write"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp120"
            android:gravity="center"
            android:text="本瓶产品生命能量导入已完成"
            android:textColor="@color/red"
            android:textSize="@dimen/text_tishi_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:gravity="center"
            android:text="请换瓶或重新申请"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_content_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp80"
            android:background="@drawable/corners_bg_redbottom">

            <TextView
                android:id="@+id/tv_off"
                style="@style/view_paddtopbottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_graybottom"
                android:gravity="center"
                android:text="换下一瓶"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_biaoTi_size" />


            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="重新申请"
                android:textColor="@color/white"
                android:textSize="@dimen/text_biaoTi_size" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/nfc_over" />
</RelativeLayout>