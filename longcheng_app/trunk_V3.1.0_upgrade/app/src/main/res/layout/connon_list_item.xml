<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp15">

        <ImageView
            android:id="@+id/item_iv_thumb"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:background="@mipmap/user_default_icon"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padd_leftright">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="王晓乐为爱友"
                    android:textColor="@color/yellow_8d4c0c"
                    android:textSize="@dimen/text_contents_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_tv_name"
                    style="@style/jieqi_padd"
                    android:background="@drawable/corners_bg_yellow25"
                    android:text="姓名"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="发起爱心互祝"
                    android:textColor="@color/yellow_8d4c0c"
                    android:textSize="@dimen/text_contents_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padd_imgtextleftright"
                android:singleLine="true"
                android:text="2020-07-08 16:58:58"
                android:textColor="@color/yellow_8d4c0c"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>
    </LinearLayout>
    <!-- -->
    <include layout="@layout/connon_create_group" />
</LinearLayout>
