<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp15"
    android:paddingLeft="@dimen/dp15"
    android:paddingRight="@dimen/dp15"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/user_default_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_tv_name"
            style="@style/view_paddlefgtright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_biaoTi_size" />

        <TextView
            style="@style/jieqi_padd"
            android:id="@+id/item_tv_jieeqi"
            android:background="@drawable/corners_bg_yellow15"
            android:text="庚子.立春"
            android:textColor="@color/yellow_E95D1B" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/connon_zudui_aiyou_xuanzhong" />
</LinearLayout>
