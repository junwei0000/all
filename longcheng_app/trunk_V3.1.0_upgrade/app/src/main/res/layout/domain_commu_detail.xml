<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <LinearLayout
        style="@style/view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/gongshe_bianqian_icon" />

        <TextView
            android:id="@+id/tv_addresstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:text="大队地址"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commune"
        style="@style/view_marginlefgtright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padd_topbottom"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_biaoTi_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/text_bottom_color" />

    <LinearLayout
        style="@style/view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/gongshe_bianqian_icon" />

        <TextView
            android:id="@+id/tv_infotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:text="大队信息"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commname"
        style="@style/view_marginlefgtright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp6"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_contents_size"
        android:visibility="gone" />

    <LinearLayout
        style="@style/view_marginlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cont1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="大队数：0"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/text_contents_size" />

        <TextView
            android:id="@+id/tv_cont2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="公社人数：0"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/text_contents_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cont3"
        style="@style/view_marginlefgtright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        android:text="公社人数：0"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_contents_size" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/view_marginlefgtright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        android:text="有效期：0"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_contents_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_btn"
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_E95D1B"
            android:gravity="center"
            android:text="抢注大队"
            android:textColor="@color/white"
            android:textSize="@dimen/text_biaoTi_size"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>