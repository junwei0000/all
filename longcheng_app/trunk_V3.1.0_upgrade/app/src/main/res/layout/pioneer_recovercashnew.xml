<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="@mipmap/my_fuqibao_bj"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp25"
                    android:paddingBottom="@dimen/dp25">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="福祺宝余额"
                        android:textColor="@color/white_tran"
                        android:textSize="@dimen/text_contents_size" />

                    <TextView
                        android:id="@+id/tv_allmoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    style="@style/view_marginlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/write_bg2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp1">

                    <EditText
                        android:id="@+id/et_moneysell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请输入福祺宝数量"
                        android:inputType="number"
                        android:padding="17dp"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/text_contents_size" />


                    <TextView
                        android:id="@+id/tv_jihuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/my_fuqibao_notcommit"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15">

                    <TextView
                        android:id="@+id/tv_servicemoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="温馨提示："
                        android:textColor="@color/color_A6FB4545"
                        android:textSize="@dimen/text_min_size" />

                    <TextView
                        android:id="@+id/tv_todayfqbnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" 今日可敬售福祺宝额度0"
                        android:textColor="@color/color_A6FB4545"
                        android:textSize="@dimen/text_min_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingTop="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/gongshe_bianqian_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp8"
                        android:text="敬售福祺宝规则"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_biaoTi_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padd_leftright"
                    android:layout_marginRight="@dimen/padd_leftright"
                    android:background="@mipmap/write_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/dp20">

                    <LinearLayout
                        android:id="@+id/layout_poni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/tv_thirdmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="人脸识别服务费：¥1"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_zhu_size" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp6"
                        android:singleLine="true"
                        android:text="敬售时间每天上午06:00到晚上21:00"
                        android:textColor="@color/color_FB4545"
                        android:textSize="@dimen/text_zhu_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp2"
                        android:singleLine="true"
                        android:text="每日敬售金额最低24福祺宝，最高3650福祺宝"
                        android:textColor="@color/color_FB4545"
                        android:textSize="@dimen/text_zhu_size" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_zfsrecord"
                style="@style/view_paddtopbottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cyanbluebg"
                android:gravity="center"
                android:text="我的订单"
                android:textColor="@color/white"
                android:textSize="@dimen/text_biaoTi_size" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
