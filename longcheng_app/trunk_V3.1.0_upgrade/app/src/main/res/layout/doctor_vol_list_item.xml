        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_img"
                android:layout_width="@dimen/dp55"
                android:layout_height="@dimen/dp55"
                android:layout_marginRight="@dimen/padd_leftright"
                android:background="@mipmap/user_default_icon"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="姓名"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_contents_size" />

                    <TextView
                        style="@style/jieqi_padd"
                        android:id="@+id/item_tv_jieqi"
                        android:text="庚子.立春" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp4"
                    android:paddingBottom="@dimen/dp4"
                    android:singleLine="true"
                    android:text="18310029028"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_content_size" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_del"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/red"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/text_content_size" />
    </com.longcheng.lifecareplan.utils.myview.SwipeLayout>

    <include layout="@layout/line" />

