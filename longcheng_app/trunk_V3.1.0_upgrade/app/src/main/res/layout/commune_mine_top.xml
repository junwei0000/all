<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/view_padd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frame_thumb"
        android:layout_width="@dimen/engrylistItem_iconHeight"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal">

        <LinearLayout
            android:layout_width="@dimen/engrylistItem_iconHeight"
            android:layout_height="@dimen/engrylistItem_iconHeight"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp8"
            android:background="@drawable/corners_oval_graycommuebian"
            android:padding="0.8dp">

            <ImageView
                android:id="@+id/iv_communethumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_commune_round" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_changethumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/corners_bg_communered"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp2"
            android:paddingTop="@dimen/dp2">

            <TextView
                android:id="@+id/tv_changethumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="换公社"
                android:textColor="@color/white"
                android:textSize="@dimen/text_min_size" />

            <ImageView
                android:id="@+id/iv_changethumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginTop="1dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/usercenter_arrowright_img"
                android:visibility="visible" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padd_imgtextleftright"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_communename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_bang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padd_imgtextleftright"
                            android:layout_marginLeft="@dimen/padd_imgtextleftright"
                            android:background="@drawable/corners_bg_redfen"
                            android:paddingBottom="@dimen/dp2"
                            android:paddingLeft="@dimen/dp8"
                            android:paddingRight="@dimen/dp8"
                            android:paddingTop="@dimen/dp2"
                            android:singleLine="true"
                            android:text="公社榜"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_dp12_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_zhuren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padd_imgtextleftright"
                    android:singleLine="true"
                    android:textColor="@color/text_healthcontents_color"
                    android:textSize="@dimen/text_dp12_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp2"
                android:background="@drawable/corners_bg_communenum"
                android:gravity="center_vertical"
                android:minWidth="@dimen/dp30"
                android:orientation="horizontal"
                android:padding="@dimen/dp1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/thecommune_praise_icon" />

                <TextView
                    android:id="@+id/tv_likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padd_imgtextleftright"
                    android:layout_marginRight="@dimen/dp8"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/cyanbluebg"
                    android:textSize="@dimen/text_zhu_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_zhixing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_healthcontents_color"
            android:textSize="@dimen/text_dp12_size" />
    </LinearLayout>
</LinearLayout>