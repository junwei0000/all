<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_corner4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="提现到银行卡"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <RelativeLayout
            android:id="@+id/rl_hava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:background="@drawable/shape_corner2"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_bank"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
             >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_bank"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp">

                </TextView>

                <TextView
                    android:id="@+id/tv_cardNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="6226 5887 **** 4113"
                    android:textColor="@color/white"
                    android:textSize="12sp">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_no_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_corner9"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_bank_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/my_zhufushi_add"
                android:layout_marginLeft="10dp"
                >

            </ImageView>

            <TextView
                android:layout_toRightOf="@+id/iv_bank_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定银行卡"
                android:textColor="@color/white"
                android:textSize="12sp">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ChangeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/shape_corner3"
                android:gravity="center"
                android:text="换卡提现"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:textColor="@color/red"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/shape_corner2"
                android:gravity="center"
                android:text="确认提现"
                android:textColor="@color/white"
                android:textSize="14sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>