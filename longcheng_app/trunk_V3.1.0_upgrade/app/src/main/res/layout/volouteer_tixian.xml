<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/page_top" />

    <include layout="@layout/line" />
    <!---->


    <LinearLayout
        style="@style/view_margintopbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:background="@drawable/corners_bg_graybian_yin"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额将提现到“我家-祝佑宝”"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_zhu_size" />

        <LinearLayout
            style="@style/view_paddtopbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/text_biaoTi_color"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/text_noclick_color"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_yue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账户余额:¥0.00 "
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp30"
                android:text="全部提现"
                android:textColor="@color/red"
                android:textSize="@dimen/text_zhu_size" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tixian"
        style="@style/btn"
        android:layout_margin="@dimen/dp10"
        android:text="提现" />
</LinearLayout>
