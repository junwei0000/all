<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp6"
            android:paddingBottom="@dimen/jianJu">

            <com.longcheng.lifecareplan.modular.home.liveplay.activity.ScrollLayout
                android:id="@+id/ScrollLayoutTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.longcheng.lifecareplan.modular.home.liveplay.activity.PageControlView
                android:id="@+id/pageControl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/e9" />

        <LinearLayout
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/activat_skb_icon"
                android:tint="@color/live_comment_bg" />

            <TextView
                android:id="@+id/tv_allskb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp6"
                android:text="0"
                android:textColor="@color/live_comment_bg"
                android:textSize="@dimen/text_tishi_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_bg_blackhumanity"
                    android:gravity="right|center_vertical">

                    <com.longcheng.lifecareplan.utils.myview.LongClickButton
                        android:id="@+id/tv_lower"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/e9" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp8"
                        android:paddingBottom="@dimen/dp8"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_biaoTi_size" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/e9" />

                    <com.longcheng.lifecareplan.utils.myview.LongClickButton
                        android:id="@+id/tv_add"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp20" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_handsel"
                    style="@style/btn_padd"
                    android:layout_marginLeft="@dimen/dp20"
                    android:background="@drawable/corners_bg_redprogress"
                    android:text="赠送" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>