<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp55">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padd_leftright"
                    android:text="支付成功即可通过申请（超级生命能量）"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_biaoTi_size" />


                <LinearLayout
                    android:id="@+id/layout_cancel"
                    style="@style/view_paddlefgtright"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/dialog_city_cancel" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_applyablity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="216"
                android:textColor="@color/yellow_E95D1B"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                style="@style/view_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_biaoTi_size" />
            <!---->
            <LinearLayout
                style="@style/view_paddlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/detailhelp_relat_superengry"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp43"
                    android:layout_marginRight="@dimen/padd_leftright"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_yellowbian"
                    android:padding="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detailhelp_tv_superengrytitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="超级生命能量"
                            android:textColor="@color/yellow_E95D1B"
                            android:textSize="@dimen/text_dp12_size" />

                        <TextView
                            android:id="@+id/detailhelp_tv_superengry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/yellow_E95D1B"
                            android:textSize="@dimen/text_zhu_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/detailhelp_iv_superengryselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@mipmap/gongshe_xuanzhong_icon" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp43"
                    android:layout_weight="1"
                    android:padding="0dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/btn_pay"
                style="@style/btn"
                android:layout_alignParentBottom="true"
                android:background="@color/yellow_E95D1B"
                android:text="立即支付" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>