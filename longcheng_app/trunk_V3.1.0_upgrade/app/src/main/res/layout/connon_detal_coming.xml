<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/chelp_bg"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/page_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/connon_create_top" />


            <LinearLayout
                style="@style/view_marginlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp15"
                android:background="@mipmap/connon_coming_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp25"
                android:paddingRight="@dimen/dp25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前节气"
                    android:textColor="@color/yellow_b25714"
                    android:textSize="@dimen/text_biaoTi_size" />

                <TextView
                    android:id="@+id/tv_jieqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp6"
                    android:text="夏至"
                    android:textColor="@color/yellow_b25714"
                    android:textSize="@dimen/text_dp25_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="距下一个节气"
                    android:textColor="@color/yellow_b25714"
                    android:textSize="@dimen/text_biaoTi_size" />

                <TextView
                    android:id="@+id/tv_nextday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp6"
                    android:text="8"
                    android:textColor="@color/yellow_b25714"
                    android:textSize="@dimen/text_dp25_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp6"
                    android:text="天"
                    android:textColor="@color/yellow_b25714"
                    android:textSize="@dimen/text_biaoTi_size" />
            </LinearLayout>

            <include layout="@layout/connon_create_group" />

            <LinearLayout
                android:id="@+id/layout_aiyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@mipmap/zudui_bj"
                android:orientation="vertical"
                android:padding="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_iv_thumb"
                        android:layout_width="@dimen/dp45"
                        android:layout_height="@dimen/dp45"
                        android:background="@mipmap/user_default_icon"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padd_leftright">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="爱友"
                                android:textColor="@color/yellow_8d4c0c"
                                android:textSize="@dimen/text_contents_size" />

                            <TextView
                                android:id="@+id/item_tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp6"
                                android:paddingRight="@dimen/dp6"
                                android:singleLine="true"
                                android:text="姓名"
                                android:textColor="@color/yellow_8d4c0c"
                                android:textSize="@dimen/text_contents_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/item_tv_jieqi"
                                style="@style/jieqi_padd"
                                android:background="@drawable/corners_bg_yellow25"
                                android:text="庚子·霜降"
                                android:textColor="@color/white_tran"  />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/item_tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp6"
                            android:singleLine="true"
                            android:text="缺失节气：立冬 小雪 大雪 冬至 小寒 大寒"
                            android:textColor="@color/yellow_8d4c0c"
                            android:textSize="@dimen/text_dp12_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp6"
                            android:singleLine="true"
                            android:text="请为爱友送上最真挚的祝福，祝福TA早日康复"
                            android:textColor="@color/yellow_8d4c0c"
                            android:textSize="@dimen/text_dp12_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/view_margintopbottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/zudui_xian" />


                <TextView
                    android:id="@+id/item_tv_ablity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="需要支付 0 超级生命能量"
                    android:textColor="@color/yellow_8d4c0c"
                    android:textSize="@dimen/text_biaoTi_size" />

                <TextView
                    android:id="@+id/item_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:singleLine="true"
                    android:text="可获得 0 积分"
                    android:textColor="@color/yellow_8d4c0c"
                    android:textSize="@dimen/text_biaoTi_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
