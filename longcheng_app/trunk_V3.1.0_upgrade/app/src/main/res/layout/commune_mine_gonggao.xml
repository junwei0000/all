<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/view_padd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/jianJu"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padd_topbottom"
        android:singleLine="true"
        android:text="最新公告"
        android:textColor="@color/text_biaoTi_color"
        android:textSize="@dimen/text_biaoTi_size" />

    <TextView
        android:id="@+id/tv_gonggaotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padd_topbottom"
        android:singleLine="true"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_zhu_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_vertical"
        >

        <ImageView
            android:layout_width="@dimen/dp17"
            android:layout_height="@dimen/dp17"
            android:background="@mipmap/thecommune_themessage_icon" />

        <TextView
            android:id="@+id/tv_gonggaocont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="@dimen/padd_imgtextleftright"
            android:textColor="@color/text_gonggao_color"
            android:textSize="@dimen/text_contents_size" />
    </LinearLayout>
</LinearLayout>