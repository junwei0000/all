<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/gongshe_bianqian_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_weight="1"
            android:text="热推互祝"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mainhotpush_tv_more"
            style="@style/text_padd_oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/gongshe_xuanze_icon"
            android:drawablePadding="@dimen/dp10"
            android:text="更多"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_biaoTi_size" />
    </LinearLayout>
    <!---->
    <com.longcheng.lifecareplan.utils.myview.MyHorizontalScrollView
        android:id="@+id/mainhotpush_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/horizontal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal" />
    </com.longcheng.lifecareplan.utils.myview.MyHorizontalScrollView>
</LinearLayout>
