<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:background="@mipmap/my_jieqibao_bj"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp25"
        android:paddingTop="@dimen/dp20">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节气宝余额"
            android:textColor="@color/jiang_bg"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/tv_alljqbmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/jiang_bg"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="福祺宝额度"
            android:textColor="@color/jiang_bg"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/tv_fqbedu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/text_dp25_size"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padd_leftright"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8">

        <TextView
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:background="@drawable/corners_bg_communered" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:text="节气宝转换"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size" />

    </LinearLayout>


    <LinearLayout
        style="@style/view_marginlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_moneyrever"
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_graybian2"
            android:hint="请输入转换福祺宝数量"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/text_biaoTi_color"
            android:textColorHint="@color/text_noclick_color"
            android:textSize="@dimen/text_zhu_size" />


        <TextView
            android:id="@+id/tv_convert"
            style="@style/btn_padd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padd_leftright"
            android:background="@drawable/pioneer_red_gradient_shape"
            android:gravity="center"
            android:singleLine="true"
            android:text="转换"
            android:textColor="@color/white"
            android:textSize="@dimen/text_zhu_size" />
    </LinearLayout>


</LinearLayout>
