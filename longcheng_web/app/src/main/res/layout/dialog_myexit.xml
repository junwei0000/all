<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="150dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/corners_bg_write"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myexit_text_title"
            style="@style/view_paddlefgtright"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="确认退出程序？"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_tishi_size" />

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myexit_text_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_tishi_size" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/linebg" />

            <TextView
                android:id="@+id/myexit_text_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_tishi_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>