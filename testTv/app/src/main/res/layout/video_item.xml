<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_content_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    android:background="@drawable/selector_item_focus_change_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="3dp">

    <!--
      注意要空出3dp给焦点显示,否则会看不到焦点效果
     -->
    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/vedio_item_icon" />

    <TextView
        android:id="@+id/tv_result_title"
        style="@style/view_paddlefgtright"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:layerType="hardware"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="【24节气科普】惊蛰 "
        android:textColor="@color/white"
        android:textSize="@dimen/text_zhu_size" />

</RelativeLayout>

