<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback"></style>

    <style name="btn">
        <item name="android:paddingTop">@dimen/padd_topbottom</item>
        <item name="android:paddingBottom">@dimen/padd_topbottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp20</item>
        <item name="android:background">@drawable/corners_bg_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_max_size</item>
    </style>

    <style name="view_padd">
        <item name="android:paddingTop">@dimen/padd_topbottom</item>
        <item name="android:paddingBottom">@dimen/padd_topbottom</item>
        <item name="android:paddingLeft">@dimen/padd_leftright</item>
        <item name="android:paddingRight">@dimen/padd_leftright</item>
    </style>

    <style name="view_paddtopbottom">
        <item name="android:paddingTop">@dimen/padd_topbottom</item>
        <item name="android:paddingBottom">@dimen/padd_topbottom</item>
    </style>

    <style name="view_paddlefgtright">
        <item name="android:paddingLeft">@dimen/padd_leftright</item>
        <item name="android:paddingRight">@dimen/padd_leftright</item>
    </style>
    <!-- 防止欢迎页白屏或者黑屏，设置图片 -->
    <style name="SplashTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@mipmap/start_page</item>
        <!-- 隐藏标题栏 -->
        <!--<item name="windowNoTitle">true</item>-->
        <!-- 隐藏状态栏 -->
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>
</resources>
