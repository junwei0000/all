<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/view_padd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:text="开启直播需要支付寿康宝"
        android:textColor="@color/text_biaoTi_color"
        android:textSize="@dimen/text_biaoTi_size" />

    <TextView
        android:id="@+id/tvskb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp20"
        android:text="0"
        android:textColor="@color/red"
        android:textSize="@dimen/text_mark_size" />

    <!---->
    <LinearLayout
        style="@style/view_padd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp6"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_redbian"
            android:gravity="center"
            android:text="暂不开启"
            android:textColor="@color/red"
            android:textSize="@dimen/text_biaoTi_size" />


        <TextView
            android:id="@+id/tv_sure"
            style="@style/view_paddtopbottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_login"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/text_biaoTi_size" />
    </LinearLayout>

</LinearLayout>