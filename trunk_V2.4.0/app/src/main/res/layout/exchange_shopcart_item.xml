<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        style="@style/view_paddtopbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padd_topbottom">

        <LinearLayout
            android:id="@+id/item_layout_check"
            style="@style/view_paddlefgtright"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_check"
                android:layout_width="@dimen/checkbox_dp"
                android:layout_height="@dimen/checkbox_dp"
                android:background="@mipmap/check_false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@color/linebg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <ImageView
                android:id="@+id/item_iv_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/mall_icon_thedefault" />

        </LinearLayout>

        <LinearLayout
            style="@style/view_paddlefgtright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp2"
                    android:singleLine="true"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_biaoTi_size" />

                <LinearLayout
                    android:id="@+id/item_layout_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padd_imgtextleftright"
                    android:paddingBottom="@dimen/padd_imgtextleftright">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/mall_icon_delete" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />


            <TextView
                android:id="@+id/item_tv_skb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textColor="@color/text_engry_bg"
                android:textSize="@dimen/text_zhu_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp27"
                android:layout_marginTop="@dimen/dp2"
                android:gravity="right|bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/item_layout_sub"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="match_parent"
                    android:background="@drawable/corners_bg_grayfang"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/item_tv_sub"
                        android:layout_width="@dimen/dp7"
                        android:layout_height="1.5dp"
                        android:background="@color/text_noclick_color"
                        android:orientation="horizontal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_tv_goodsnum"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-1dp"
                    android:background="@drawable/corners_bg_blackfang"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/item_tv_add"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="match_parent"
                    android:background="@drawable/corners_bg_blackfang"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_contents_size" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp35"
        android:background="@color/linebg" />
</LinearLayout>
