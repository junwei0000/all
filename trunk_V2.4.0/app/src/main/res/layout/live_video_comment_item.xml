<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padd_topbottom"
    android:paddingBottom="@dimen/dp4">


    <ImageView
        android:id="@+id/item_iv_thumb"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padd_imgtextleftright">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ems="8"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />

            <TextView
                android:id="@+id/item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp7"
                android:text="2019-12-25"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_deseribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padd_imgtextleftright"
            android:text="说点啥"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_zhu_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_iv_follow"
        style="@style/view_paddlefgtright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp2"
        android:paddingBottom="@dimen/dp8">

        <ImageView
            android:id="@+id/iv_dianzan"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:background="@mipmap/follow_gray" />

        <TextView
            android:id="@+id/tv_dianzannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_min_size" />
    </LinearLayout>
</LinearLayout>
