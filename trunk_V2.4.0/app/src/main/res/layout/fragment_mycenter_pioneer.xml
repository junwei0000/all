<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/view_padd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <!---->

    <LinearLayout
        android:id="@+id/mycenter_layout_moneyjieqibao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/my_jieqibao_huang"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节气宝"
            android:textColor="@color/jiang_bg"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/mycenter_tv_moneyjieqibao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padd_imgtextleftright"
            android:text="0"
            android:textColor="@color/jiang_bg"
            android:textSize="@dimen/text_pageTop_size" />
    </LinearLayout>

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/mycenter_layout_moneyfqb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/my_fuqibao_hong"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="福祺宝"
            android:textColor="@color/white"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/mycenter_tv_moneyfqb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padd_imgtextleftright"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_pageTop_size" />
    </LinearLayout>

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/mycenter_layout_moneyzfb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/my_fuqibao_lan"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="祝佑宝"
            android:textColor="@color/white"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/mycenter_tv_moneyzfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padd_imgtextleftright"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_pageTop_size" />
    </LinearLayout>
    <!---->
</LinearLayout>