<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg_red"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp20">


        <LinearLayout
            android:id="@+id/layout_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/corners_oval_write">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/corners_oval_write"
                android:padding="@dimen/dp10">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/view_paddtopbottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="祝福师已向您付款"
            android:textColor="@color/fukuan_bg"
            android:textSize="@dimen/dp20" />

        <TextView
            android:id="@+id/tv_sure"
            style="@style/dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_bg_huang"
            android:gravity="center"
            android:text="立即处理"
            android:textColor="@color/red"
            android:textSize="@dimen/text_pageTop_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/my_thestar_shutdown" />
    </LinearLayout>
</LinearLayout>