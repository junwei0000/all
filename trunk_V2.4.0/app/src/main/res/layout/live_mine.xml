<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_live"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/live_page_top" />

    <LinearLayout
        style="@style/view_paddlefgtright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.longcheng.lifecareplan.utils.myview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp72"
                android:layout_height="@dimen/dp72"
                android:layout_marginRight="@dimen/dp10"
                android:src="@mipmap/user_default_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="这里是用户名字"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_pageTop_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_follow"
                        style="@style/view_paddlefgtright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:background="@drawable/corners_bg_red"
                        android:paddingTop="@dimen/dp4"
                        android:paddingBottom="@dimen/dp4"
                        android:singleLine="true"
                        android:text="取消关注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_showtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="您还没有填写个人简介，请点击添加"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:paddingTop="@dimen/dp4"
                    android:textColor="@color/text_noclick_color"
                    android:textColorHint="@color/text_noclick_color"
                    android:textSize="@dimen/text_contents_size" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            style="@style/view_paddtopbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_likenum"
                style="@style/btn_padd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg_blackhumanity"
                android:text="获赞 0" />

            <TextView
                android:id="@+id/tv_myfollow"
                style="@style/btn_padd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/corners_bg_blackhumanity"
                android:text="关注 0" />

            <TextView
                android:id="@+id/tv_skbnum"
                style="@style/btn_padd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg_blackhumanity"
                android:text="寿康宝 0" />
        </LinearLayout>


        <include layout="@layout/live_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_myvideo"
            style="@style/view_paddtopbottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/white"
            android:textSize="@dimen/text_biaoTi_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mylive"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="直播"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_biaoTi_size" />

        <TextView
            android:id="@+id/tv_mylove"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="喜欢"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_biaoTi_size" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_live"
        android:fadingEdge="none"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
</LinearLayout>
