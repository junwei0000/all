<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/view_paddtopbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padd_leftright">


        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="@dimen/dp35"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_contents_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padd_imgtextleftright"
            android:layout_toLeftOf="@+id/layout_num"
            android:layout_toRightOf="@+id/item_tv_num"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:textColor="@color/text_biaoTi_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/item_tv_shequ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="养神方立春公社"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_iv_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@mipmap/my_shipment_open" />

            <TextView
                android:id="@+id/item_tv_skb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14654"
                android:textColor="@color/red"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/item_tv_mingxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细记录"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/line" />
</LinearLayout>
