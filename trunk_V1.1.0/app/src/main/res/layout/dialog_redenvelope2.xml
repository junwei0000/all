<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hongbaoget_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_tool" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/aredenvelope_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padd_leftright"
                    android:text="恭喜您中奖啦！"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_pageTop_size" />

                <LinearLayout
                    android:id="@+id/layout_cancel"
                    style="@style/view_paddlefgtright"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/wisheachdetails_pay_shutdown" />
                </LinearLayout>
            </RelativeLayout>
            <!---->
            <ImageView
                android:id="@+id/iv_spokesman"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:scaleType="centerCrop"
                android:src="@mipmap/user_default_icon" />

            <TextView
                android:id="@+id/tv_partner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/jianJu"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_pageTop_size" />

            <TextView
                android:id="@+id/tv_partner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_biaoTi_size" />
            <!---->

            <FrameLayout
                android:id="@+id/frl_red_evelope_parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/llredenvelope"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_redtop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/iv_redbottom"
                        android:layout_marginBottom="-65dp"
                        android:background="@mipmap/aredenvelope_shutdown_b"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:id="@+id/frl_clicktopen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/aredenvelope_shutdown_a">

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="点击领取红包"
                            android:textColor="@color/hongbaoget_bg"
                            android:textSize="@dimen/text_pageTop_size" />
                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frl_get_redenvelope_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/aredenvelope_openthe"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_jieqi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:text="大暑红包"
                            android:textColor="@color/hongbaoget_bg"
                            android:textSize="@dimen/text_dp25_size"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_red_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.25"
                            android:textColor="@color/hongbaoget_bg"
                            android:textSize="@dimen/text_dp40_size"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_redtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寿康宝"
                            android:textColor="@color/hongbaoget_bg"
                            android:textSize="@dimen/text_max_size"
                            android:visibility="visible" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|center_horizontal"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_represent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/guige_bj_icon"
                            android:maxHeight="@dimen/dp60"
                            android:scaleType="fitXY"
                            android:visibility="visible" />
                    </FrameLayout>

                </FrameLayout>


            </FrameLayout>


            <LinearLayout
                android:id="@+id/layout_bootom"
                style="@style/view_marginlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/padd_topbottom"
                android:layout_marginTop="@dimen/padd_imgtextleftright"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_backlist"
                    style="@style/view_marginlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_huang"
                    android:gravity="center"
                    android:paddingBottom="@dimen/jianJu"
                    android:paddingTop="@dimen/jianJu"
                    android:text="返回互祝列表"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/btn_proceed"
                    style="@style/view_marginlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_huang"
                    android:gravity="center"
                    android:paddingBottom="@dimen/jianJu"
                    android:paddingTop="@dimen/jianJu"
                    android:text="继续互祝TA"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_contents_size" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>