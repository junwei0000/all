<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jianJu"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goodtype"
                style="@style/view_padd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="互祝产品"
                android:textColor="@color/text_biaoTi_color"
                android:textSize="@dimen/text_biaoTi_size" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/view_padd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>
        <!---->
        <LinearLayout
            android:id="@+id/layout_good"
            style="@style/view_padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_type"
            android:background="@drawable/corners_bg_goodgray"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item_iv_goodthumb"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp50"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padd_leftright">

                <TextView
                    android:id="@+id/item_tv_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="养神方立春公社"
                    android:textColor="@color/text_biaoTi_color"
                    android:textSize="@dimen/text_biaoTi_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_imgtextleftright"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_iv_goodtypeimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padd_imgtextleftright"
                        android:background="@mipmap/activat_skb_icon"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/item_tv_goodnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生命能量：45"
                        android:textColor="@color/cyanblue"
                        android:textSize="@dimen/text_zhu_size" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!---->
        <LinearLayout
            style="@style/view_paddlefgtright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_good"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_date"
                style="@style/view_margintopbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-09-05"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_zhu_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_bg_black"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padd_imgtextleftright"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:paddingTop="@dimen/padd_imgtextleftright"
                    android:text="查看物流"
                    android:textColor="@color/text_contents_color"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/item_tv_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padd_imgtextleftright"
                    android:background="@drawable/corners_bg_black"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padd_imgtextleftright"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:paddingTop="@dimen/padd_imgtextleftright"
                    android:text="查看物流"
                    android:textColor="@color/text_contents_color"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/item_tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padd_imgtextleftright"
                    android:background="@drawable/corners_bg_black"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padd_imgtextleftright"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:paddingTop="@dimen/padd_imgtextleftright"
                    android:text="确认收货"
                    android:textColor="@color/text_contents_color"
                    android:textSize="@dimen/text_zhu_size" />

            </LinearLayout>
        </LinearLayout>
        <!---->
        <ImageView
            android:id="@+id/item_iv_status"
            android:layout_marginRight="@dimen/padd_leftright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>


</RelativeLayout>