<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/page_top" />

    <include layout="@layout/line" />
    <!---->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.longcheng.lifecareplan.utils.myview.MyScrollView
            android:id="@+id/activat_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_jihuo"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/padd_topbottom">

                <LinearLayout
                    style="@style/view_paddlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/page_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingTop="@dimen/dp8">

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/padd_imgtextleftright"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:paddingBottom="@dimen/img_setTextcenter"
                        android:text="激活后获取生命能量"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>
                <!---->
                <RelativeLayout
                    style="@style/view_margin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:background="@drawable/corners_bg_blackhealth">

                    <ImageView
                        android:id="@+id/activat_iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padd_leftright"
                        android:layout_marginRight="@dimen/padd_imgtextleftright"
                        android:background="@mipmap/activat_icon" />

                    <TextView
                        android:id="@+id/activat_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padd_imgtextleftright"
                        android:layout_toRightOf="@+id/activat_iv_icon"
                        android:text="18900"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_max_size" />

                    <TextView
                        android:id="@+id/activat_tv_cont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padd_leftright"
                        android:layout_toRightOf="@+id/activat_tv_num"
                        android:text="激活18000+赠送900"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_zhu_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/activat_you_icon" />
                </RelativeLayout>

                <!---->
                <LinearLayout
                    style="@style/view_paddlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/page_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingTop="@dimen/dp8">

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/padd_imgtextleftright"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:paddingBottom="@dimen/img_setTextcenter"
                        android:text="请选择金额"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>
                <!---->
                <com.longcheng.lifecareplan.utils.myview.MyGridView
                    android:id="@+id/activat_gv_money"
                    style="@style/view_padd"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/transparent"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@null"
                    android:fadeScrollbars="true"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:gravity="left"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@drawable/list_notselector"
                    android:numColumns="3"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />
                <!---->
                <LinearLayout
                    style="@style/view_paddlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/page_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingTop="@dimen/dp8">

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/padd_imgtextleftright"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padd_imgtextleftright"
                        android:paddingBottom="@dimen/img_setTextcenter"
                        android:text="请选择支付方式"
                        android:textColor="@color/text_biaoTi_color"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>
                <!---->
                <LinearLayout
                    style="@style/view_padd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/activat_relat_wx"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp43"
                        android:layout_marginRight="@dimen/dp3"
                        android:layout_weight="1"
                        android:background="@drawable/corners_bg_redbian"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/paywx_iv_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/padd_imgtextleftright"
                                android:background="@mipmap/paywx_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信"
                                android:textColor="@color/text_contents_color"
                                android:textSize="@dimen/text_dp12_size" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activat_iv_wxselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/pay_selcet_icon_red" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/activat_relat_account"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp43"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_weight="1"
                        android:background="@drawable/corners_bg_blackhealth"
                        android:padding="0dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/payaccout_iv_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp3"
                                android:background="@mipmap/payaccout_icon" />

                            <TextView
                                android:id="@+id/activat_tv_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="现金余额:0"
                                android:textColor="@color/text_contents_color"
                                android:textSize="@dimen/text_dp12_size" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activat_iv_accountselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/pay_selcet_icon_red"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/view_paddlefgtright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/detailhelp_relat_zfb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp43"
                        android:layout_marginRight="@dimen/dp3"
                        android:layout_weight="1"
                        android:background="@drawable/corners_bg_blackhealth"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/padd_imgtextleftright"
                                android:background="@mipmap/wisheachdetails_pay_paytreasure" />

                            <TextView
                                android:id="@+id/tv_zfbtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝"
                                android:textColor="@color/text_contents_color"
                                android:textSize="@dimen/text_zhu_size" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/detailhelp_iv_zfbselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/pay_selcet_icon_red"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp43"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:background="@drawable/corners_bg_blackhealth"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </com.longcheng.lifecareplan.utils.myview.MyScrollView>

        <TextView
            android:id="@+id/btn_jihuo"
            style="@style/btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padd_topbottom"
            android:layout_marginLeft="@dimen/padd_leftright"
            android:layout_marginRight="@dimen/padd_leftright"
            android:layout_marginTop="@dimen/padd_leftright"
            android:text="立即激活" />


    </RelativeLayout>
</LinearLayout>
