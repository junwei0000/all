<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/padd_topbottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_iv_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp88"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_tv_name1"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_contents_color"
        android:textSize="@dimen/text_contents_size" />

    <TextView
        android:id="@+id/item_tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_dp12_size" />

    <TextView
        android:id="@+id/item_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp3"
        android:textColor="@color/text_engry_bg"
        android:textSize="@dimen/text_zhu_size" />
</LinearLayout>
