<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/view_paddlefgtright"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padd_topbottom">

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/padd_imgtextleftright"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/item_tv_phone"
            android:text="你是谁->"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_contents_size" />

        <TextView
            android:id="@+id/item_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="18310012645"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_contents_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padd_imgtextleftright"
        android:text="北京市朝阳区金台西路2号新媒体大楼24层"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_zhu_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padd_topbottom"
        android:layout_marginTop="@dimen/jianJu">

        <TextView
            android:id="@+id/item_tv_check"
            android:layout_width="@dimen/checkbox_dp"
            android:layout_height="@dimen/checkbox_dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/check_false" />

        <TextView
            android:id="@+id/item_tv_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_tv_check"
            android:paddingBottom="@dimen/padd_imgtextleftright"
            android:paddingTop="@dimen/padd_imgtextleftright"
            android:paddingLeft="@dimen/padd_imgtextleftright"
            android:text="默认地址"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/item_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_tv_del"
            android:background="@drawable/corners_bg_redbian"
            android:gravity="center"
            android:paddingBottom="@dimen/padd_imgtextleftright"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/padd_imgtextleftright"
            android:text="修改"
            android:textColor="@color/red"
            android:textSize="@dimen/text_zhu_size" />

        <TextView
            android:id="@+id/item_tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padd_leftright"
            android:background="@drawable/corners_bg_redbian"
            android:gravity="center"
            android:paddingBottom="@dimen/padd_imgtextleftright"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/padd_imgtextleftright"
            android:text="删除"
            android:textColor="@color/red"
            android:textSize="@dimen/text_zhu_size" />


    </RelativeLayout>

    <include layout="@layout/line" />
</LinearLayout>
