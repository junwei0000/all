<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/padd_leftright"
    android:paddingBottom="@dimen/padd_imgtextleftright">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f4f3f2">

        <ImageView
            android:id="@+id/item_iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp88"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padd_leftright"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_iv_thelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padd_imgtextleftright"
            android:background="@mipmap/mall_icon_thelabel"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_contents_size"
            android:typeface="monospace" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dp2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/item_tv_num"
            android:gravity="bottom">

            <TextView
                android:id="@+id/item_tv_skb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="3"
                android:singleLine="true"
                android:textColor="@color/text_engry_bg"
                android:textSize="@dimen/text_biaoTi_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp2"
                android:singleLine="true"
                android:text=" 寿康宝"
                android:textColor="@color/text_engry_bg"
                android:textSize="@dimen/text_min_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dp2"
            android:singleLine="true"
            android:text="已兑换0件"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_min_size" />
    </RelativeLayout>
</LinearLayout>
