<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/jianJu"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/view_padd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="互祝能量"
            android:textColor="@color/text_biaoTi_color"
            android:textSize="@dimen/text_biaoTi_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/corners_bg_communeengry">

            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg_communeengryselect"
                android:paddingBottom="@dimen/dp3"
                android:paddingLeft="@dimen/dp7"
                android:paddingRight="@dimen/dp7"
                android:paddingTop="@dimen/dp3"
                android:singleLine="true"
                android:text="今日"
                android:textColor="@color/text_biaoTi_color"
                android:textSize="@dimen/text_zhu_size" />

            <TextView
                android:id="@+id/tv_leiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp3"
                android:paddingLeft="@dimen/dp7"
                android:paddingRight="@dimen/dp7"
                android:paddingTop="@dimen/dp3"
                android:singleLine="true"
                android:text="累计"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.longcheng.volunteer.utils.myview.MyListView
            android:id="@+id/detail_lv_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cacheColorHint="@color/page_bg"
            android:divider="@null"
            android:focusable="false"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:scrollbars="none" />

        <include layout="@layout/not_date" />
    </FrameLayout>
</LinearLayout>